      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Data\Repositories\Messaging.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
